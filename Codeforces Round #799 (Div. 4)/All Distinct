#include <bits/stdc++.h>
 
using namespace std;
 
int main()
{
    int t;
    cin>>t;
    while(t--)
    {
        int n;
        cin>>n;
        map<int,int> mp;
        int x;
        for(int i=0;i<n;i++)
        {
            cin>>x;
            mp[x]++;
        }
        
        
        int cnt=mp.size();
        if((n-cnt)%2!=0)
        {
            cnt--;
        }
        cout<<cnt<<endl;
    }
 
    return 0;
}
